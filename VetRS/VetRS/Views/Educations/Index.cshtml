@model IEnumerable<VetRS.Models.Education>

@section Styles {
    <link rel="stylesheet" href="~/css/user.css" />
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">VA Approved Education Programs</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                <p1>Profile</p1>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ProgramName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ProgramBio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationZipCode)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        <form asp-controller="Educations" asp-action="Index">
            <p>
                Approved Schools: <input type="text" name="SearchString">
                <input type="submit" value="Filter" />
            </p>
        </form>

    </tbody>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Profile</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ProgramName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ProgramBio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationStreet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationZipCode)
                </td>
            </tr>
        }
    </tbody>
</table>
