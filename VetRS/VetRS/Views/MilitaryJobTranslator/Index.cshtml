@model IEnumerable<VetRS.Models.MilitaryJobTranslator>

@{
    ViewData["Title"] = "Military Job Translator";
}

<h1 class="text-center">Military Job Translator</h1>
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MilitaryJobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CivilianJobTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        <form asp-controller="MilitaryJobTranslator" asp-action="Index">
            <p>
                Occupational Specialty: <input type="text" name="SearchString">
                <input type="submit" value="Filter" />
            </p>
        </form>

    </tbody>
    @foreach (var item in Model)
    {
<tr>
    <td>
        
        <a asp-action="Details" asp-route-id="@item.MilitarySpecialtyNumber"> @Html.DisplayFor(modelItem => item.MilitaryJobTitle)</a>
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.CivilianJobTitle)
    </td>
</tr>
    }
</table>
