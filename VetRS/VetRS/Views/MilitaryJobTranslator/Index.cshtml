@model IEnumerable<VetRS.Models.MilitaryJobTranslator>
@section Styles {
    <link rel="stylesheet" href="~/css/user.css" />
}

@{
    ViewData["Title"] = "Military Job Translator";
}


<br />
<div class="row">
    <div class="col-2 leftlogodiv">
        <figure class="imageDivLeft">
            <img class="img-fluid logo" src="/assets/vetrs.png" alt="Soldier on knees with big backpack and carrying rifle.">
        </figure>
    </div>
    <div class="col-8">
        <h1 class="text-center customFont">Military Job Translator</h1>
    </div>
    <div class="col-2">
        <figure class="imageDivRight">
            <img class="img-fluid logo" src="/assets/SoldierSalutingFlag-300x175.jpg" alt="Soldier saluting flag with big flag background.">
        </figure>
    </div>
</div>
<br />
<br />
<br />

<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MilitaryJobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CivilianJobTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="text-center">
        <form asp-controller="MilitaryJobTranslator" asp-action="Index">
            <p>
                Occupational Specialty: <input type="text" name="SearchString">
                <input type="submit" value="Filter" />
            </p>
        </form>

    </tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>

                <a asp-action="Details" asp-route-id="@item.MilitarySpecialtyNumber"> @Html.DisplayFor(modelItem => item.MilitaryJobTitle)</a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CivilianJobTitle)
            </td>
        </tr>
    }
</table>
