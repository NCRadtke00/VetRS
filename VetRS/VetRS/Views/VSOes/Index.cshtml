@model IEnumerable<VetRS.Models.VSO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Veterans Service Officer(VSO)</h1>
<h2>Please select a VSO</h2>
<h2>The VSO will help you submit your claim to the VA.</h2>
<h4>Don't hire a lawyer when VSO's are FREE!</h4>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VSOStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VSOCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VSOState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VSOZipCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VSOStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VSOCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VSOState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VSOZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
